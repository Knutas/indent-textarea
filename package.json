{
	"name": "indent-textarea",
	"version": "2.1.1",
	"description": "Add editor-like tab-to-indent functionality to <textarea>, in a few bytes",
	"keywords": [
		"editor",
		"indent",
		"indentation",
		"tab",
		"text area"
	],
	"repository": "fregante/indent-textarea",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"type": "module",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "run-s build test:*",
		"test:blink": "browserify -p esmify tests/* | tape-run --browser chrome",
		"test:gecko": "browserify -p esmify tests/* | tape-run --browser firefox",
		"test:lint": "xo",
		"start": "snowpack dev",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser"
		]
	},
	"dependencies": {
		"text-field-edit": "^3.1.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.9.0",
		"browserify": "^17.0.0",
		"esmify": "^2.1.1",
		"npm-run-all": "^4.1.5",
		"snowpack": "^3.0.13",
		"tape": "^5.2.2",
		"tape-run": "^8.0.0",
		"typescript": "^4.2.3",
		"xo": "^0.38.2"
	}
}

{
	"name": "indent-textarea",
	"description": "Add editor-like tab-to-indent functionality to <textarea>, in a few bytes",
	"version": "0.0.1",
	"repository": "bfred-it/indent-textarea",
	"license": "MIT",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"keywords": [
		"text area",
		"tab",
		"indent",
		"indentation",
		"editor"
	],
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.2.1",
		"@typescript-eslint/eslint-plugin": "^1.4.2",
		"eslint-config-xo-typescript": "^0.8.0",
		"typescript": "^3.3.3333",
		"xo": "*"
	},
	"scripts": {
		"test": "tsc && xo !index.js",
		"prepare": "tsc",
		"build": "tsc",
		"watch": "tsc --watch"
	},
	"xo": {
		"extends": "xo-typescript",
		"extensions": [
			"ts"
		],
		"envs": [
			"browser"
		],
		"rules": {
			"prefer-rest-params": 0,
			"valid-jsdoc": 0,
			"max-params": 0,
			"@typescript-eslint/promise-function-async": 0
		}
	}
}
